<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/left" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="Hồ Sơ"
            android:layout_marginRight="44dp"
            android:textColor="#F0F0F0"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/lisa"
        app:civ_border_width="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/account" />

        <EditText
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:id="@+id/name"
            android:focusable="false"
            android:layout_height="55dp"
            android:paddingLeft="45dp"
            android:paddingTop="15dp"
            android:text="Lisa Ronaldo"
            android:textColor="#747171"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border"
        >
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/day" />

        <EditText
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:id="@+id/birth"
            android:layout_height="match_parent"
            android:focusable="false"
            android:paddingLeft="45dp"
            android:paddingTop="15dp"

            android:text="11/11/1111"
            android:textColor="#747171"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border"
        >
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/phone" />
        <EditText
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/phone"
            android:focusable="false"
            android:text="0368686868"
            android:textColor="#747171"
            android:textSize="18dp"
            android:paddingTop="15dp"
            android:paddingLeft="45dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border"
        >
        <TextView
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="28dp"
            android:background="@drawable/face" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:paddingLeft="45dp"
            android:focusable="false"
            android:id="@+id/facebook"
            android:paddingTop="15dp"
            android:text="fb.com/RonaldoAHihi"
            android:textColor="#747171"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border"
        >
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/lock" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:text="RonaldoRePoker"
            android:textColor="#747171"
            android:textSize="18dp"
            android:paddingTop="15dp"
            android:paddingLeft="45dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/edit"

            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Chỉnh Sửa"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btnSignOut"
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Đăng Xuất"
            android:background="@drawable/bt2"
            android:textColor="@color/white"
            />
    </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/border_footer"
        android:layout_marginTop="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/border_footer"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">


            <RelativeLayout
                android:id="@+id/btnHome"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/home2" />

                <TextView
                    android:id="@+id/txtHome"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Trang Chủ" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnProduct"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/listproduct3" />

                <TextView
                    android:id="@+id/txtProduct"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Sản Phẩm" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnHistory"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_baseline_history_24" />
                />

                <TextView
                    android:id="@+id/txtHistory"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Lịch Sử" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnProfile1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <TextView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/profile_active" />
                />

                <TextView
                    android:id="@+id/txtProfile"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Cá Nhân"
                    android:textColor="@color/main" />
            </RelativeLayout>
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>